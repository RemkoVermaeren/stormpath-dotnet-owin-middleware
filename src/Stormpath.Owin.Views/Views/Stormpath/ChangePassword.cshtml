@model Stormpath.Owin.Abstractions.ViewModel.ChangePasswordViewModel
@using System
@using System.Linq
@using Stormpath.Owin.Abstractions

@*@functions {
    private Stormpath.Owin.Abstractions.ViewModel.ChangePasswordViewModel Model { get; }
}*@

<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
